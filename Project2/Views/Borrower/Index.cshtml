@model List<Borrower>
@{ 
    ViewBag.Title = "Borrowers";
}
<h1 class="display-1">@ViewBag.Title</h1>
<p class="lead">These are borrowers of my disks.</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Borrower ID</th>
            <th>Last Name</th>
            <th>First Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var borrower in Model)
            {
                <tr>
                    <td>@borrower.BorrowerId</td>
                    <td>@borrower.LName</td>
                    <td>@borrower.FName</td>
                </tr>
            }
    </tbody>
</table>
